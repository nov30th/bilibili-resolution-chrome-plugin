{
  "manifest_version": 3,
  "name": "B站自动最高清晰度",
  "version": "1.0.0",
  "description": "自动选择B站视频最高清晰度",
  "author": "Nov30th, HOHO``",
  "homepage_url": "https://github.com/nov30th/bilibili-resolution-chrome-plugin",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.bilibili.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/video/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
